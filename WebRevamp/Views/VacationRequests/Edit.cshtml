@model WebRevamp.Models.VacationRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Vacation Aprroval</h1>

@if (Model.HODApprovalStatus == "new")
{
    <h4>HOD Approval</h4>
}
@if (Model.OpsApprovalStatus == "new" && Model.HODApprovalStatus == "approved")
{
    <h4>OPS Approval</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId" disable/>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@

            @if (Model.HODApprovalStatus == "new")
            {
                <div class="form-group">
                    <label asp-for="HODApprovalStatus" class="control-label"></label>
                    <select asp-for="HODApprovalStatus" class="form-control">
                        <option value="new">New</option>
                        <option value="approved">Approved</option>
                    </select>
                    <span asp-validation-for="HODApprovalStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HODApproverId" class="control-label"></label>
                    <select asp-for="HODApproverId" class="form-control" asp-items="ViewBag.HODApproverId"></select>
                    <span asp-validation-for="HODApproverId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="OpsApprovalStatus" class="form-control" hidden>
                        <option value="new">New</option>
                    </select>
                </div>
            }
            @if (Model.OpsApprovalStatus == "new" && Model.HODApprovalStatus == "approved")
            {
                <div class="form-group">
                    <label asp-for="OpsApprovalStatus" class="control-label"></label>
                    <select asp-for="OpsApprovalStatus" class="form-control" >
                        <option value="new">New</option>
                        <option value="approved">Approved</option>
                    </select>
                    <span asp-validation-for="OpsApprovalStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OpsApproverId" class="control-label"></label>
                    <select asp-for="OpsApproverId" class="form-control" asp-items="ViewBag.OpsApproverId"></select>
                    <span asp-validation-for="OpsApproverId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="HODApprovalStatus" class="form-control" hidden>
                        <option value="approved">Approved</option>
                    </select>
                </div>
                <div class="form-group">
                    <input asp-for="HODApproverId" class="form-control" value=@Model.HODApproverId hidden />
                </div>

                <div class="form-group">
                    <input asp-for="Status" class="form-control" value="approved" hidden />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

